{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": "off",
    "quotes": ["error", "single"],
    "@typescript-eslint/explicit-function-return-type": ["error"]
  },
  // "ignorePatterns": ["**/*.test.js"]
  "overrides":[{
    "files": ["*.js"],
    "rules": {"@typescript-eslint/explicit-function-return-type": ["off"]}
  }]
}
